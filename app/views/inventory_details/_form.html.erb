<%= form_for(@inventory_detail) do |f| %>
  <% if @inventory_detail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@inventory_detail.errors.count, "error") %> prohibited this inventory_detail from being saved:</h2>

      <ul>
      <% @inventory_detail.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="exampleInputFile">Inventory Code</label>
    <%= f.number_field :inventory_code, :step => 'any', class: 'form-control' %>
  </div>
  <div class="form-group">
    <label for="exampleInputFile">Inventory Description</label>
    <%= f.text_area :inventory_description, :step => 'any', class: 'form-control' %>
  </div>
  <div class="form-group">
    <label for="exampleInputFile">Warehouse Code</label>
    <%= f.number_field :warehouse_code, :step => 'any', class: 'form-control' %>
  </div>
  <div class="form-group">
    <label for="exampleInputFile">Inventory Warehouse</label>
    <%= f.text_field :inventory_warehouse, :step => 'any', class: 'form-control' %>
  </div>
  <div class="form-group">
    <label for="exampleInputFile">Inventory Groups</label>
    <%= f.text_field :inventory_groups, :step => 'any', class: 'form-control' %>
  </div>
  <div class="form-group">
    <label for="exampleInputFile">H5 codes</label>
    <%= f.number_field :HS_codes, :step => 'any', class: 'form-control' %>
  </div>
  <div class="form-group">
    <label for="exampleInputFile">Inventory Unit Price</label>
    <%= f.text_field :inventory_unit_price, :step => 'any', class: 'form-control' %>
  </div>
  <div class="form-group">
    <label for="exampleInputFile">Inventory Qty</label>
    <%= f.number_field :inventory_qty, :step => 'any', class: 'form-control' %>
  </div>
  <div class="form-group">
    <label for="exampleInputFile">Inventory UoM</label>
    <%= f.text_field :inventory_UoM, :step => 'any', class: 'form-control' %>
  </div>
  <div class="form-group">
    <label for="exampleInputFile">Inventory Category</label>
    <%= f.text_field :inventory_category, :step => 'any', class: 'form-control' %>
  </div>
  <div class="box-footer">
    <%= f.submit "Submit", class: "btn btn-success btn-sm" %>
      <!--<button type="submit" class="btn btn-primary">Submit</button>-->
  </div>
<% end %>
