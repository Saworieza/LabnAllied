<% @title="Orders" %>
<p id="notice"><%= notice %></p>

<div class="col-md-12">
  <div class="box">
    <div class="box-header with-border">
      <h1 class="box-title">Order Listings</h1>    
        <h3 class="box-title pull-right ">
          <%= link_to 'New Order', new_order_path, class: "btn btn-warning btn-sm" %>
        </h3>
    </div>
    <div class="box-body">
      <table class="table table-bordered table-hover">
          <tr>
            <th>Product</th>
            <th>Lots</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Rate</th>
            <th colspan="2"></th>
          <tr>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.product %></td>
              <td><%= order.lots %></td>
              <td><%= order.quantity %></td>
              <td><%= order.price %></td>
              <td><%= order.rate %></td>
              <td><%= link_to 'Show', order %></td>
              <td><%= link_to 'Delete', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tr>
      </table>
    </div>
    <div class="box-footer clearfix">
      <ul class="pagination pagination-sm no-margin pull-right">
        <li><%= will_paginate @orders, renderer: BootstrapPagination::Rails %></li>
      </ul>
    </div>
  </div><!-- /.box -->
</div><!-- /.col -->

    <strong><%= link_to "print Order",orders_path(@order, format: "pdf") %>
