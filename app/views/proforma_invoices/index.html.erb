<% @title="Proforma Invoices" %>
<p id="notice"><%= notice %></p>

<div class="col-md-12">
  <div class="box">
    <div class="box-header with-border">
      <h1 class="box-title">Listing Proforma Invoices</h1>    
        <h3 class="box-title pull-right ">
          <%= link_to 'Create Proforma Invoice', new_proforma_invoice_path, class: "btn btn-warning btn-sm" %>
        </h3>
    </div>
    <div class="box-body">
      <table class="table table-bordered table-hover">
          <tr>
            <th>Supplier name</th>
            <th>Proforma invoice nos</th>
            <th>Pfi date</th>
            <th colspan="2"></th>
          <tr>
          <% @proforma_invoices.each do |proforma_invoice| %>
            <tr>
              <td><%= proforma_invoice.supplier_name %></td>
              <td><%= proforma_invoice.proforma_invoice_nos %></td>
              <td><%= proforma_invoice.pfi_date %></td>
              <td><%= link_to 'Show', proforma_invoice %></td>
              <td><%= link_to 'Edit', edit_proforma_invoice_path(proforma_invoice) %></td>
              <td><%= link_to 'Destroy', proforma_invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tr>
      </table>
    </div>
    <div class="box-footer clearfix">
      <ul class="pagination pagination-sm no-margin pull-right">
        <li><%= will_paginate @proforma_invoices, renderer: BootstrapPagination::Rails %></li>
      </ul>
    </div>
  </div><!-- /.box -->
</div><!-- /.col -->

