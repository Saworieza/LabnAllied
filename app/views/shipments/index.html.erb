<% @title="Shipment" %>
<p id="notice"><%= notice %></p>

<div class="col-md-12">
  <div class="box">
    <div class="box-header with-border">
      <h1 class="box-title">Shipments</h1>
    
      <h3 class="box-title pull-right ">
        <%= link_to 'New Shipment', new_shipment_path, class: "btn btn-warning btn-sm" %>
      </h3>
    </div>
    <div class="box-body table-responsive">
      <table class="table table-bordered">
        <tr>
          <th>Country of origin</th>
          <th>Supplier</th>
          <th>Supply nature</th>
          <th>Custom entry nos</th>
          <th>Custom exchange rate</th>
          <th>Custom value</th>
          <th>Agent inv nos</th>
          <th>Quantity</th>
          <th>Total cost usd</th>
          <th colspan="2"></th>
        </tr>
        <% @shipments.each do |shipment| %>
          <tr>
          <td><%= shipment.country_of_origin %></td>
          <td><%= shipment.supplier %></td>
          <td><%= shipment.supply_nature %></td>
          <td><%= shipment.custom_entry_nos %></td>
          <td><%= shipment.custom_exchange_rate %></td>
          <td><%= shipment.custom_value %></td>
          <td><%= shipment.agent_inv_nos %></td>
          <td><%= shipment.Quantity %></td>
          <td><%= shipment.total_cost_usd %></td>
          <td><%= link_to('Show', shipment, class: 'btn-info btn-md')  %></td>
          <td><%= link_to('Delete', shipment, class: 'btn-danger btn-md', method: :delete, data: { confirm: 'Are you sure?' })  %></td>
          </tr>
        <% end %>
        </tr>
      </table>
    </div><!-- /.box-body -->
    <div class="box-footer clearfix">
      <ul class="pagination pagination-sm no-margin pull-right">
        <li><%= will_paginate @shipments, renderer: BootstrapPagination::Rails %></li>
      </ul>
    </div>
  </div><!-- /.box -->
</div><!-- /.col -->

<%= link_to "print File Information",shipments_path(@order, format: "pdf") %>