<%= form_for @ppb, url: ppbs_path, html: {multipart: true} do |f| %>
  <% if @ppb.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ppb.errors.count, "error") %> prohibited this ppb from being saved:</h2>

      <ul>
      <% @ppb.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="exampleInputFile">Upload Image</label>
    <%= f.file_field :avatar %>
  </div>

  <div class="form-group">
    <label for="exampleInputFile">UCR Number</label>
    <%= f.text_field :UCR_Number, :step => 'any', class: 'form-control' %>
  </div>

  <div class="form-group">
    <label>Application Date:</label>
    <div class="input-group">
      <div class="input-group-addon">
        <i class="fa fa-calendar"></i>
      </div>
      <%= f.date_select :application_date, :step => 'any', class: 'form-control' %>
      <!--<input class="form-control" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask="" type="text">-->
    </div><!-- /.input group -->
  </div>

  <!--<div class="form-group">
    <label for="exampleInputFile">Application Date</label>
    <%= f.date_select :application_date, :step => 'any', class: 'form-control' %>
  </div>-->

  <div class="box-footer">
    <%= f.submit "Submit", class: "btn btn-success btn-sm" %>
      <!--<button type="submit" class="btn btn-primary">Submit</button>-->
  </div>


    
  <!--<div class="actions">
  </div>-->
<% end %>
