<div class="box box-primary col-lg-6">
  <div class="box-header with-border ">
    <h3 class="box-title">Edit Your <%= resource_name.to_s.humanize %> Account</h3>
  </div>
  <div class="box-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="row">
        <div class="col-lg-6">
          <%= image_tag @user.avatar.url(:thumb), class: "img-thumbnail " %>
          <div class="form-group">
            <%#= f.file_field :avatar %>
            <%= f.file_field :avatar, class: "form-control" %>
          </div>

          <div class="form-group">
            <label for="exampleInputFile">User Name</label>
              <%= f.text_field :username, :step => 'any', class: 'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleInputFile">Email</label>
            <%= f.email_field :email, autofocus: true, :step => 'any', class: 'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleInputFile">Phone</label>
            <%= f.number_field :phone, :step => 'any', class: 'form-control' %>
          </div>
        </div>

        <div class="col-lg-6">
          <div class="form-group">
            <label for="exampleInputFile">First Name</label>
            <%= f.text_field :first_name, :step => 'any', class: 'form-control' %>
          </div>

          <div class="form-group">
            <label for="exampleInputFile">Last Name</label>
            <%= f.text_field :last_name, :step => 'any', class: 'form-control' %>
          </div>

          
          <div class="form-group">
            <label for="exampleInputFile">Department</label>
              <%= collection_select( :user, :department_id,  Department.all, :id, :name, {}, {:multiple => false, class: "form-control select2"}) %>
            </div>

          <div class="form-group">
            <label for="exampleInputFile">Description</label>
            <%= f.text_area :description, :step => 'any', class: 'form-control' %>
          </div>
        </div>

        <div class="col-lg-12">
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="box-header with-border " style="border-bottom: 3px solid red; ">
            <h1 class="box-title text-center">Credentials</h1>
          </div>
          <div class="form-group">
            <label for="exampleInputFile">Password</label>
            <%= f.password_field :password, autocomplete: "off", :step => 'any', class: 'form-control' %>
          </div>

          <div class="form-group">
            <label for="exampleInputFile">Confirm Password</label>
            <%= f.password_field :password_confirmation, autocomplete: "off", :step => 'any', class: 'form-control' %>
          </div>

          <div class="form-group">
            <label for="exampleInputFile">Current Password</label>
            <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "off", :step => 'any', class: 'form-control' %>
          </div>
        </div>

      

        <div class="box-footer">
          <%= f.submit "Submit", class: "btn btn-block btn-success btn-lg" %>
          <!--<button type="submit" class="btn btn-primary">Submit</button>-->
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="box box-primary col-lg-6">
  <div class="box-header with-border " style="border-bottom: 3px solid red; ">
    <h1 class="box-title text-center">Danger Zone</h1>
  </div>
  <div class="box-body">
    <h3 >Delete Account</h3>
    <p><%= button_to "Delete Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-block btn-danger btn-lg" %></p>
  </div>
</div>
