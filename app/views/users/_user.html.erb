
            
            <tbody>
            <%# @users.each do |user| %>
                <tr>
		            <td><%= link_to user.id, user %></td>
                    <td><%= link_to user.username, user %></td>
        	        <td><%= link_to user.first_name, user%></td>
                    <td><%= link_to user.last_name, user%></td>
                    <td><%= link_to user.email, user%></td>
                    <td>
						<%= form_for(user) do |f| %>
						<%= f.select(:role, User.roles.keys.map {|role| [role.titleize,role]}) %>
						<td>
							<%= f.submit 'Change Role', class: "btn btn-success btn-sm" %>
						</td>
						<% end %>
					</td>
					<td>
						<%= link_to("Delete User", user_path(user), :data => {:confirm => "Are you Sure?"}, :method => :delete, :class => "btn btn-danger btn-sm" ) unless user == current_user %>
					</td>
                </tr>
             <%# end %>  
            </tbody>
       