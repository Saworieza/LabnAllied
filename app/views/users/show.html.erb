<% @title="User Profile" %>
<section class="content">
    <div class="row">
      <div class="col-md-3">

        <!-- Profile Image -->
        <div class="box box-primary">
          <div class="box-body box-profile">
            <%= image_tag @user.avatar.url(:medium), class: "profile-user-img img-responsive " %>
            <h3 class="profile-username text-center"><%= @user.username if @user.username %></h3>

            <ul class="list-group list-group-unbordered">
              <li class="list-group-item">
                <b>Role : </b> <a class="pull-right"><%= @user.role if @user.role %></a>
              </li>
              <li class="list-group-item">
                <b>First Name : </b> <a class="pull-right"><%= @user.first_name if @user.first_name %></a>
              </li>
              <li class="list-group-item">
                <b>Last Name : </b> <a class="pull-right"><%= @user.last_name if @user.last_name %></a>
              </li>
              <li class="list-group-item">
                <b>Phone : </b><a class="pull-right"><%= @user.phone if @user.phone %></a>
              </li>
            </ul>
          </div><!-- /.box-body -->
        </div><!-- /.box -->
	</div><!-- /.col -->
    <div class="col-md-9">
      <div class="nav-tabs-custom">
        <ul class="nav nav-tabs">
          <li class="active"><a href="#activity" data-toggle="tab">User Profile </a></li>
        </ul>
        <div class="tab-content">
          <div class="active tab-pane" id="activity">
            <div class="post">
                <p><b>Email : </b>
                <a><%= @user.email if @user.email %></a></p>
                <p>
                  <%= @user.description if @user.description %>
                </p>
            </div><!-- /.tab-pane -->
		  </div><!-- /.tab-content -->
        </div><!-- /.nav-tabs-custom -->
      </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->
