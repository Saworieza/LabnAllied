<% @title="Business Types" %>
<p id="notice"><%= notice %></p>

<div class="col-md-12">
  <div class="box">
    <div class="box-header with-border">
      <h1 class="box-title">Business Type Listings</h1>
    
      <h3 class="box-title pull-right ">
        <%= link_to "New Business Type", new_business_type_path, class: "btn btn-warning btn-sm" %>
      </h3>
    </div>
    <div class="box-body">
      <table class="table table-bordered table-hover">
        <tr>
          <th>Business type</th>
          <th colspan="2"></th>
        </tr>
        <% @business_types.each do |business_type| %>
          <tr>
            <td><%= business_type.business_type %></td>
            <td><%= link_to 'Show', business_type %></td>
            <td><%= link_to 'Delete', business_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </table>
    </div><!-- /.box-body -->
    <div class="box-footer clearfix">
      <ul class="pagination pagination-sm no-margin pull-right">
        <li><%= will_paginate @business_types, renderer: BootstrapPagination::Rails %></li>
      </ul>
    </div>
  </div><!-- /.box -->
</div><!-- /.col -->

  