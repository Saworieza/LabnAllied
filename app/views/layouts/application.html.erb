<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag :defaults, :cache => true %>
  
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="content">
      <div class="col-lg-12">
        <div id="flash">
          <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>"><%= value %></div>
          <% end %>
        </div>
      </div>
      <section class="content">
        <%= yield %>
      </section>
    </div>

    <!-- Main Footer -->
    <footer class="footer">
      <strong>Copyright &copy; <%= Time.now.year %> <a href="#">Lab n Allied</a>.</strong> All rights reserved.
    </footer>
  </div><!-- /container-->
 </body>
</html>