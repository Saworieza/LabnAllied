<% @title="Insurances" %>
<p id="notice"><%= notice %></p>
<div class="col-md-12">
  <div class="box">
    <div class="box-header with-border">
      <h1 class="box-title">Insurance Listings</h1>    
        <h3 class="box-title pull-right ">
          <%= link_to 'Add Insurance', new_insurance_path, class: "btn btn-warning btn-sm" %>
        </h3>
    </div>
    <div class="box-body">
      <table class="table table-bordered table-hover">
          <tr>
            <th>Insurance name</th>
            <th>Total insurance charges</th>
            <th colspan="2"></th>
          <tr>
          <% @insurances.each do |insurance| %>
            <tr>
              <td><%= insurance.insurance_name %></td>
              <td><%= insurance.total_insurance_charges %></td>
              <td><%= link_to 'Show', insurance %></td>
              <td><%= link_to 'Delete', insurance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tr>
      </table>
    </div>
    <div class="box-footer clearfix">
      <ul class="pagination pagination-sm no-margin pull-right">
        <li><%= will_paginate @insurances, renderer: BootstrapPagination::Rails %></li>
      </ul>
    </div>
  </div><!-- /.box -->
</div><!-- /.col -->




