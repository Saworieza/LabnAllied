<% @title="Company Setups" %>
<p id="notice"><%= notice %></p>

<div class="col-md-12">
  <div class="box">
    <div class="box-header with-border">
      <h1 class="box-title">Company Setup Listings</h1>
    
      <h3 class="box-title pull-right ">
        <%= link_to "New Company Setup", new_company_setup_path, class: "btn btn-warning btn-sm" %>
      </h3>
    </div>
    <div class="box-body">
      <table class="table table-bordered table-hover">
        <tr>
          <th>Company name</th>
          <th>Company description</th>
          <th>Company address</th>
          <th colspan="2"></th>
        </tr>
        <% @company_setups.each do |company_setup| %>
        <tr>
          <td><%= company_setup.company_name %></td>
          <td><%= company_setup.company_description %></td>
          <td><%= company_setup.company_address %></td>
          <td><%= link_to 'Show', company_setup %></td>
          <td><%= link_to 'Delete', company_setup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </table>
    </div><!-- /.box-body -->
    <div class="box-footer clearfix">
      <ul class="pagination pagination-sm no-margin pull-right">
        <li><%= will_paginate @company_setups, renderer: BootstrapPagination::Rails %></li>
      </ul>
    </div>
  </div><!-- /.box -->
</div><!-- /.col -->


